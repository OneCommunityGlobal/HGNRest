{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "plugins": [
    "@babel/plugin-transform-async-to-generator",
    [
      "@babel/plugin-transform-runtime",
      {
        "corejs": false,
        "helpers": true,
        "regenerator": true,
        "useESModules": false
      }
    ],
    [
      "module-resolver",
      {
        "root": "./src"
      }
    ]
  ],
  "ignore": ["**/*.test.js", "**/*.spec.js", "src/test/**"]
}
